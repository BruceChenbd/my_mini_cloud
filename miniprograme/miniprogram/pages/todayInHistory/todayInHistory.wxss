/* miniprogram/pages/todayInHistory/todayInHistory.wxss */
.today_in_history {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding:10px;
}
.today_in_history .event_item {
    width: 80%;
    padding: 15px;
    margin: 5px;
    background-color: #fff;
    border-radius: 5px;
}

.today_in_history .event_item image {
    width: 100%;
}
.today_in_history .event_item view {
    margin-bottom: 10px;
}
.today_in_history .event_item .title {
    text-align: center;
    font-weight: bold;
    font-size: 14px;
}
.today_in_history .event_item .date {
    display: flex;
    justify-content: space-between;
}
.today_in_history .event_item .date text {
    font-size: 12px;
    color: red;
}
.today_in_history .event_item .des {
    font-size: 14px;
}